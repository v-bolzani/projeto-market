@model Market.DTO.CategoriaDTO
@{
    Layout = "_LayoutAdmin";
}
<h3>NOVA CATEGORIA</h3>
<hr>
<form class="form-horizontal" asp-controller="Categorias" asp-action="Salvar" method="POST">   
    <input type="hidden" asp-for="Id" value="0">
    <label asp-for="Nome">Nome</label><br>
    <input type="text" asp-for="Nome" class="form-control" placeholder="Nome da Categoria"><br>
    <span asp-validation-for="Nome"></span><br>
    <hr>
    <button class="btn btn-success">Cadastrar</button>
</form>