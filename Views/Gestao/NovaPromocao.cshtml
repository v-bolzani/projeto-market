@model Market.DTO.PromocaoDTO
@{
    Layout = "_LayoutAdmin";
}
<h3>NOVA PROMOÇÃO</h3>
<hr>

<form asp-controller="Promocoes" asp-action="Salvar" method="POST">
    <input type="hidden" asp-for="Id" value="0">
    <label asp-for="Nome">Nome</label>
    <input type="text" asp-for="Nome" class="form-control" placeholder="Nome da promoção"><br>
    <span asp-validation-for="Nome"></span><br>
    <label asp-for="ProdutoId">Produto</label>
    <select class="form-control" asp-for="ProdutoId" asp-items='@(new SelectList(@ViewBag.Produtos,"Id","Nome"))'></select><br>
    <label asp-for="Porcentagem">Porcentagem</label>
    <input type="number" min="0" max="100" asp-for="Porcentagem" placeholder="100" class="form-control">
    <button class="btn btn-success">Cadastrar</button>
</form>