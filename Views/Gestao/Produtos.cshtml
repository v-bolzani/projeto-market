@model IEnumerable<Market.Models.Produto>
@{
    Layout = "_LayoutAdmin";
}
<script>
    $(document).ready( function () {
        $('#produtos').DataTable({
            "info": false,
            "language": {
                "lengthMenu": "Mostrando _MENU_ registros por paágina",
                "zeroRecords": "Desculpa, nada encontrado.",
                "info": "Mostrando página _PAGE_ de _PAGE_",
                "infoEmpty": "Nenhum registro disponível.",
                "search": "Buscar",
                "paginate": {
                    "first": "Primeiro",
                    "last": "Último",
                    "next": "Próximo",
                    "previous": "Anterior"
                }
            }
        });
    } );
</script>

<h2>PRODUTOS</h2>
<hr>
<a asp-action="NovoProduto" asp-controller="Gestao" class="btn btn-success"> Adicionar novo Produto</a>
<hr>

<table id="produtos" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Categoria</th>
            <th>Fornecedor</th>
            <th>Preço de custo</th>
            <th>Preço de venda</th>
            <th>Medição</th>
            <th>Ações</th>
        </tr>  
    </thead>
    <tbody>
        @foreach(var produto in Model)
        {
            <tr>
                <td>@produto.Id</td>
                <td>@produto.Nome</td>
                <td>@produto.Categoria.Nome</td>
                <td>@produto.Fornecedor.Nome</td>
                <td>@produto.PrecoCusto</td>
                <td>@produto.PrecoVenda</td>
                <td>
                    @if(@produto.Medicao == 0){
                        <span>Litro</span>
                    }else if(@produto.Medicao == 1){
                        <span>Quilo</span>
                    }else if(@produto.Medicao == 2){
                        <span>Unidade</span>
                    }else{
                        <span>Medição indisponivel</span>
                    }
                </td>
                <td>
                    <a class="btn btn-primary" href="/Gestao/EditarProduto/@produto.Id">Editar</a>
                    <form asp-action="Deletar" asp-controller="Produtos" style="display: inline;">
                        <input type="hidden" name="id" id="id" value="@produto.Id">
                        <button class="btn btn-danger">Deletar</button>
                    </form>   
                </td>
            </tr>
        }
    </tbody>
</table>