@model IEnumerable<Market.Models.Promocao>
@{
    Layout = "_LayoutAdmin";
}
<script>
    $(document).ready( function () {
        $('#promocoes').DataTable({
            "info": false,
            "language": {
                "lengthMenu": "Mostrando _MENU_ registros por paágina",
                "zeroRecords": "Desculpa, nada encontrado.",
                "info": "Mostrando página _PAGE_ de _PAGE_",
                "infoEmpty": "Nenhum registro disponível.",
                "search": "Buscar",
                "paginate": {
                    "first": "Primeiro",
                    "last": "Último",
                    "next": "Próximo",
                    "previous": "Anterior"
                }
            }
        });
    } );
</script>

<h2>PROMOÇÃO</h2>
<hr>
<a asp-action="NovaPromocao" asp-controller="Gestao" class="btn btn-success"> Adicionar nova promoção</a>
<hr>

<table id="promocoes" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Produto</th>
            <th>Porcentagem</th>
            <th>Ações</th>
        </tr>  
    </thead>
    <tbody>
        @foreach(var promocao in Model)
        {
            <tr>
                <td>@promocao.Id</td>
                <td>@promocao.Nome</td>
                <td>@promocao.Produto.Nome</td>
                <td>@promocao.Porcentagem%</td>           
                <td>
                    <a class="btn btn-primary" href="/Gestao/EditarPromocao/@promocao.Id">Editar</a>
                    <form asp-action="Deletar" asp-controller="Promocao" style="display: inline;">
                        <input type="hidden" name="id" id="id" value="@promocao.Id">
                        <button class="btn btn-danger">Deletar</button>
                    </form>   
                </td>
            </tr>
        }
    </tbody>
</table>